<?xml version="1.0" encoding="utf-8"?>

<beans>
    <bean id="userBasicDao" class="com.edward.QQZoneProject.dao.impl.UserBasicDAOImpl"/>
    <bean id="topicDao" class="com.edward.QQZoneProject.dao.impl.TopicDAOImpl"/>
    <bean id="userBasicService" class="com.edward.QQZoneProject.servic.impl.UserBasicServiceImpl">
        <property name="userBasicDAO" ref="userBasicDAO"/>
    </bean>

    <bean id="topicService" class="com.edward.QQZoneProject.servic.impl.TopicServiceImpl">
        <property name="topicDAO" ref="topicDAO"/>
    </bean>

    <bean id="user" class="com.edward.QQZoneProject.controller.UserController">
        <property name="userBasicService" ref="userBasicService"/>
        <property name="topService" ref="topicService"/>
    </bean>



</beans>
